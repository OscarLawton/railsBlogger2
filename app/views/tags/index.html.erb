<h1>All Tags</h1>

<ul id="tags">
  <% @tag.each do |tag| %>
      <li>
        <%= link_to tag.name, tag_path(tag) %>

      </li>

      <li>
        <%= link_to 'Delete Tag', tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
  <% end %>
</ul>


<%= link_to "Back to articles", articles_path %>